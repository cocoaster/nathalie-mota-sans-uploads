#photo-list{display:grid;grid-template-columns:repeat(2,1fr);gap:20px;max-width:85%;margin:0 auto}#photo-list .photo-item{position:relative;overflow:hidden;border-radius:10px;height:836px}#photo-list .photo-item img{width:100%;height:100%;object-fit:cover;border-radius:10px}#load-more{display:block;margin:60px auto;padding:20px 100px;font-family:'Space Mono',monospace;font-size:16px;border:none;border-radius:5px;background-color:#d8d8d8;color:#000;cursor:pointer;position:relative;overflow:hidden;z-index:0}#load-more:before{content:'';position:absolute;top:0;left:10%;width:300px;height:300px;background:rgba(0,0,0,1);border-radius:50%;transform:translate(-50%,-50%) scale(0);opacity:0;transition:transform .5s,opacity .5s,filter .5s;pointer-events:none;z-index:-1}#load-more:hover:before{opacity:1;animation:ripple .5s ease-out forwards}#load-more:hover{color:#fff}.photo-item{position:relative;overflow:hidden;height:580px}.photo-item img{width:100%;height:580px;transition:transform .3s ease}.photo-item:hover img{transform:scale(1.1)}.photo-overlay{position:absolute;top:0;left:0;width:100%;height:100%;display:flex;justify-content:center;align-items:center;flex-direction:column;background-color:rgba(0,0,0,.5);opacity:0;transition:opacity .3s ease-in-out}.photo-item:hover .photo-overlay{opacity:1}.icon{color:#fff;font-size:24px;margin:10px;transition:color .3s ease-in-out}.icon:hover{color:#d9534f}.icon.fullscreen{position:absolute;top:10px;right:10px;font-size:24px}.photo-info{position:absolute;bottom:10px;left:10px;right:10px;display:flex;justify-content:space-between;color:#fff;font-family:'Space Mono',monospace;font-size:14px}.photo-reference{text-align:left}.photo-category{text-align:right}@media (max-width:1280px){#photo-list .photo-item{height:636px}}@media (max-width:991px){#photo-list .photo-item{height:436px}}@media (max-width:768px){#photo-list .photo-item{height:290px}}@media (max-width:575px){#photo-list{grid-template-columns:repeat(1,1fr);max-width:85%}#load-more{padding:18px 60px}}